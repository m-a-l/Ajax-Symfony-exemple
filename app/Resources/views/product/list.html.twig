<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Price VAT incl.</th>
        <th>Uuid</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td><a href="{{ path('_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.uuid }}</td>

            <td>
                <a href="{{ path('_show', { 'id': product.id }) }}"><button type="button" class="btn btn-lg btn-primary">Show</button></a>
                <a href="#" data-path="{{ path('_form_edit', { 'id': product.id }) }}" class="edit_form_create"><button type="button" class="btn btn-lg btn-warning">Edit</button></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>